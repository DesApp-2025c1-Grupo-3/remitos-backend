# Configuración de Docker
DOCKERFILE=Dockerfile.dev
NODE_ENV=development
PORT=3002

# Control de base de datos (solo 2 variables importantes)
RUN_SEEDS=true              # true = con datos de prueba, false = sin datos
RUN_MIGRATIONS=true         # true = con migraciones, false = sin migraciones

# Configuración de base de datos LOCAL (desarrollo)
SQL_USERNAME=postgres
SQL_PASSWORD=1234
SQL_DATABASE=remitos_db
SQL_HOST=remitos-db
SQL_PORT=5432

# Configuración de base de datos PRODUCCIÓN (Neon/Render)
# Estas variables se configuran automáticamente en Render
# DATABASE_URL=postgresql://user:password@host:port/database

# Volúmenes
VOLUME_MOUNT=./lib:/app/lib

GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REFRESH_TOKEN=
GMAIL_USER_EMAIL=gianbellone@gmail.com
EMAIL_FROM_NAME=Remitos ACME

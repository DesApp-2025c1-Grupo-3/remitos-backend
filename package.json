{
  "name": "remitos-backend",
  "version": "1.0.0",
  "license": "MIT",
  "main": "bin/www.js",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:seed:estados": "sequelize db:seed --seed 20250101000000-initial-estados.js",
    "demo": "node clean-and-seed.js",
    "docker:dev": "docker compose up --build",
    "docker:dev:seeds": "RUN_SEEDS=true docker compose up --build",
    "docker:prod": "DOCKERFILE=Dockerfile NODE_ENV=production VOLUME_ENV= docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "render:deploy": "echo 'Para desplegar en Render, usa el Dockerfile.render o configura render.yaml'"
  },
  "nodemonConfig": {
    "watch": [
      "lib/*",
      "bin/*"
    ],
    "ignore": [
      "node_modules/*"
    ]
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "helmet": "^3.22.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "morgan": "^1.9.1",
    "multer": "^1.4.5-lts.2",
    "path": "^0.12.7",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.x"
  },
  "devDependencies": {
    "nodemon": "^2.0.3",
    "sequelize-cli": "^6.2.0"
  },
  "optionalDependencies": {
    "pg-native": "^3.0.0"
  },
  "engines": {
    "node": ">=14.15.0"
  }
}

{
  "name": "remitos-backend",
  "version": "1.0.0",
  "license": "MIT",
  "main": "bin/www.js",
  "scripts": {
    "start": "node ./bin/www",
    "dev": "nodemon ./bin/www",
    "db:migrate": "sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:seed:normalizacion": "sequelize db:seed:all",
    "db:seed:estados": "sequelize db:seed --seed 20250101000000-initial-estados.js",
    "docker:init": "RUN_MIGRATIONS=true RUN_SEEDS=true docker compose up --build",
    "docker:dev": "cross-env RUN_MIGRATIONS=false RUN_SEEDS=false docker compose up --build",
    "docker:dev:fast": "SKIP_DB_SETUP=true docker compose up --build",
    "docker:clean": "docker compose down -v && cross-env RUN_MIGRATIONS=true RUN_SEEDS=true docker compose up --build",
    "docker:clean:fast": "SKIP_DB_SETUP=true docker compose down -v && docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "deploy:prod": "node scripts/deploy-prod.js",
    "db:migrate:prod": "node scripts/migrate-prod.js",
    "db:seed:prod": "node scripts/seed-prod.js",
    "populate-db": "node scripts/populate-local-db.js",
    "check-ids": "node scripts/check-ids.js",
    "reset-sequences": "node scripts/reset-sequences.js",
    "populate-db:enable": "node scripts/toggle-populate-db.js true",
    "populate-db:disable": "node scripts/toggle-populate-db.js false",
    "render:deploy": "echo 'Para desplegar en Render, usa el Dockerfile.render o configura render.yaml'"
  },
  "nodemonConfig": {
    "watch": [
      "lib/*",
      "bin/*"
    ],
    "ignore": [
      "node_modules/*"
    ]
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "axios": "^1.12.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "googleapis": "^144.0.0",
    "helmet": "^3.22.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "morgan": "^1.9.1",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^4.2.1",
    "path": "^0.12.7",
    "pg": "^8.3.3",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.x"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "nodemon": "^2.0.3",
    "sequelize-cli": "^6.2.0"
  },
  "optionalDependencies": {
    "pg-native": "^3.0.0"
  },
  "engines": {
    "node": "18.20.2"
  }
}
